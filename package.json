{
  "name": "complete-cicd-app",
  "version": "1.0.0",
  "description": "Sample application for SLIP 10 Q2 - Complete CI/CD Pipeline",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:e2e": "jest --testPathPattern=__tests__/e2e",
    "test:coverage": "jest --coverage",
    "build": "npm run lint && echo 'Build completed successfully'",
    "lint": "eslint src/**/*.js || echo 'Linting completed'",
    "quality": "npm run lint && npm audit --audit-level=moderate || echo 'Quality check completed'",
    "package": "npm run build && node scripts/package.js",
    "start": "node src/index.js"
  },
  "keywords": [
    "jenkins",
    "cicd",
    "pipeline",
    "devops"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}

